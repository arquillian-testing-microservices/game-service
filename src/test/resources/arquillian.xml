<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="chameleon" default="true">
        <configuration>
            <property name="chameleonTarget">wildfly:9.0.0.Final:managed</property>
        </configuration>
    </container>

    <extension qualifier="algeron-consumer">
        <property name="publishConfiguration">
            provider: git
            url: ${env.giturl:http://localhost:3000/alex/gamer-contracts.git}
            username: ${env.gitusername:alex}
            password: ${env.gitpassword:alex}
            comment: New Contract for Version ${env.artifactversion:1.0.0}
            contractsFolder: target/pacts
        </property>
        <property name="publishContracts">${env.publishcontracts:true}</property>
    </extension>

    <extension qualifier="pact-consumer">

    </extension>

</arquillian>