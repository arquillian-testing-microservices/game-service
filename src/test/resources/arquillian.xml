<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="chameleon" default="true">
        <configuration>
            <property name="chameleonTarget">wildfly:9.0.0.Final:managed</property>
        </configuration>
    </container>

    <extension qualifier="pact-consumer">
        <property name="pactPublishConfiguration">
            provider: git
            url: http://localhost:3000/alex/gamer-contracts.git
            username: alex
            password: alex
            comment: New Contract for Version 1.0.0
        </property>
        <property name="publishContracts">${env.publishcontracts:false}</property>
    </extension>

</arquillian>